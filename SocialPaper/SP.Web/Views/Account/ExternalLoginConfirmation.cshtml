@model SP.Web.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = "Connexion";
}

@section featured {
    <div class="p2-eb-theme-bg-blue">
        <div class="p2-content-width">
            <h1>@ViewBag.Title.</h1>
            <h2>Associer votre compte @ViewBag.ProviderDisplayName.</h2>
            <p>
                Vous venez de vous connecter avec votre compte <strong>@ViewBag.ProviderDisplayName</strong>.
                Merci de renseigner un login qui vous permet de vous connecter sans passer par un autre service.
            </p>
        </div>
    </div>
}
<div class="formulaire">
    <div class="bloc formulaire-connexion">
        <table>
            <tr>
                <td>
                    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <fieldset>
                            <ol>
                                <li class="name">
                                    @Html.LabelFor(m => m.UserName)
                                    @Html.TextBoxFor(m => m.UserName)
                                    @Html.DescriptionFor(m => m.UserName)
                                </li>
                                <li class="name">
                                    @Html.LabelFor(m => m.Email)
                                    @Html.TextBoxFor(m => m.Email)
                                </li>
                            </ol>
                            @Html.HiddenFor(m => m.ExternalLoginData)
                            <input class="green-button" type="submit" value="Inscription" />
                        </fieldset>
                    }
                </td>
                <td>
                        @Html.Image("/Images/socialpaper-couverture.png", "one social",355, 200)
                </td>
            </tr>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
