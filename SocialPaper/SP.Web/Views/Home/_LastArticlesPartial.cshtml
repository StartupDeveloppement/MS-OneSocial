@model ICollection<SP.Web.Models.ArticleLink>

@if (Model.Count > 0)
{
    <div>
        <h3 class="widget-title">Dernières publications</h3>
        <div>
            <ul class="menu">
                @foreach (SP.Web.Models.ArticleLink item in Model)
                {
                    <li>
                        @Html.ActionLink(item.Title, "Display", "Article", new { id = item.Id, titre = item.HtmTitle, sitename = item.Site }, null)
                    </li>
                }
            </ul>
        </div>
	</div>
}
